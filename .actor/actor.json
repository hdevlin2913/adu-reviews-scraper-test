{
    "actorSpecification": 1,
    "name": "adu-reviews-scraper",
    "title": "Scrape data and reviews from TripAdvisor",
    "description": "This actor extracts data and reviews from TripAdvisor.",
    "version": "0.0",
    "buildTag": "latest",
    "meta": {
        "templateId": "python-beautifulsoup"
    },
    "input": "./input_schema.json",
    "dockerfile": "./Dockerfile",
    "storages": {
        "dataset": {
            "actorSpecification": 1,
            "title": "Places data and reviews",
            "views": {
                "overview": {
                    "title": "Overview",
                    "transformation": {
                        "fields": ["basic_data.image", "basic_data.url", "basic_data.name", "description"],
                        "flatten": ["basic_data"]
                    },
                    "display": {
                        "component": "table",
                        "properties": {
                            "basic_data.image": {
                                "label": "Image",
                                "format": "image"
                            },
                            "basic_data.url": {
                                "label": "Link",
                                "format": "link",
                                "transform": "https://www.tripadvisor.com{{basic_data.url}}"
                            },
                            "basic_data.name": {
                                "label": "Title",
                                "format": "text"
                            },
                            "description": {
                                "label": "Description",
                                "format": "text"
                            }
                        }
                    }
                }
            }
        }
    }
}
